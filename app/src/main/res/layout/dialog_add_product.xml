<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
              android:paddingLeft="15dp"
              android:paddingRight="15dp">

    <LinearLayout
        android:id="@+id/laoAddProductTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="#ffd7ead4"
        android:padding="10dp">

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="5"
            android:text="Add Product"
            android:textSize="24sp"
            android:paddingLeft="1dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/laoAddProductEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:orientation="vertical"
        android:background="#ffeceff1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Name: "
                android:id="@+id/textAddProductName"
                android:textSize="20dp"
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_addProductName"
                android:background="#ffffffff"
                android:layout_gravity="top"
                android:singleLine="true"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Amount : "
                android:id="@+id/textAddProductAmount"
                android:textSize="20dp"
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/et_addProductAmount"
                android:text="1"
                android:background="#ffffffff"
                android:layout_weight="0.58"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/LinearLayout_product_status">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:id="@+id/textView7"
                android:textSize="20dp"
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:textStyle="bold"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_bought"
                android:entries="@array/product_status"
                android:focusable="false"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/laoAddProductDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#ffd7ead4"
        android:padding="10dp"
        android:weightSum="1">

        <Button
            android:id="@+id/dlgBtnAddProductCancel"
            style="android:buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="cancel"
            android:textSize="15sp"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/dlgBtnAddProductSave"
            style="android:buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.5"/>

    </LinearLayout>


</LinearLayout>
